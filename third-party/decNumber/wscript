#!/usr/bin/env python
# encoding: utf-8

from waflib import Logs, Utils
from waflib.Configure import ConfigurationContext

import os
import sys

top = '.'
out = 'build'

def options(opt):
    opt.load('compiler_c')


def configure(conf):
    conf.load('compiler_c')

def build(bld):
    # This set of c source files correspond to the set of modules mentioned in
    # the "Modules" section of the decNumber documentation
    # (http://speleotrove.com/decimal/decnumber.html).
    decnumber_sources = ['decContext.c',
                         'decDouble.c',
                         'decPacked.c',
                         'decQuad.c',
                         'decSingle.c',
                         'decNumber.c',
                         'decimal128.c',
                         'decimal64.c',
                         'decimal32.c']

    if 'BDE_THIRD_PARTY_CFLAGS' in bld.env:
        bde_cflags = bld.env['BDE_THIRD_PARTY_CFLAGS']
    else:
        bde_cflags = []

    if sys.byteorder == 'big':
        cflags = ["-DDECLITEND=0"]
    else:
        assert(sys.byteorder == 'little')
        cflags = ["-DDECLITEND=1"]

    prefix  = bld.env['PREFIX']
    if 'install_lib_dir' in bld.env:
        lib_dir = bld.env['install_lib_dir']
    else:
        lib_dir = 'lib'

    bld.stlib(source=decnumber_sources,
              target='decNumber',
              export_includes='.',
              name='decNumber_lib',
              cflags=bde_cflags + cflags,
              install_path = os.path.join(prefix, lib_dir))

    bld(name = "decNumber_pc",
        source = 'decNumber.pc.in',
        target = 'decNumber.pc',
        prefix = prefix,
        lib_dir = lib_dir,
        libs = '-ldecNumber',
        cflags = ' '.join(cflags),
        install_path = os.path.join(prefix, lib_dir, 'pkgconfig')
    )

    bld.install_files(os.path.join(prefix, 'include', 'decNumber'),
                      bld.path.ant_glob('*.h'))



